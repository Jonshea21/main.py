# Define the list of authorized vehicles
AllowedVehiclesList = ['Ford F-150', 'Chevrolet Silverado', 'Tesla CyberTruck', 'Toyota Tundra', 'Nissan Titan']

def print_menu():
    """Displays the menu options to the user."""
    print("********************************")
    print("AutoCountry Vehicle Finder v0.2")
    print("********************************")
    print("Please Enter the following number below from the following menu:")
    print("1. PRINT all Authorized Vehicles")
    print("2. SEARCH for Authorized Vehicle")
    print("3. Exit")

def print_vehicles():
    """Prints all authorized vehicles."""
    print("The AutoCountry sales manager has authorized the purchase and selling of the following vehicles:")
    for vehicle in AllowedVehiclesList:
        print(vehicle)

def search_vehicle(vehicle_name):
    """Checks if the entered vehicle name is in the list of authorized vehicles."""
    if vehicle_name in AllowedVehiclesList:
        return f"{vehicle_name} is an authorized vehicle."
    else:
        return f"{vehicle_name} is not an authorized vehicle; if you received this in error please check the spelling and try again."

def main():
    """Main function to drive the CarFinder program."""
    while True:
        print_menu()  # Display menu
        choice = input("Enter your choice: ")  # Get user input

        if choice == "1":
            print_vehicles()  # Print all authorized vehicles
        elif choice == "2":
            vehicle_name = input("Please Enter the full Vehicle name: ")  # Get vehicle name
            result = search_vehicle(vehicle_name)  # Search for the vehicle
            print(result)
        elif choice == "3":
            print("Thank you for using the AutoCountry Vehicle Finder, good-bye!")  # Exit message
            break
        else:
            print("Invalid input. Please select 1, 2, or 3.")  # Invalid input handling

# Start the program
if __name__ == "__main__":
    main()
